/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define CAN_ID_1 0b11001111100  //ID1
#define CAN_ID_2 0b11001111101	//ID2

#define CAN_RX_ID 0b11001111100		//First address  0x67C
#define CAN_RX_MASK 0b11111111100	//Last 2 don't cares. So, 0x67C-FFC is filter's allowable addresses

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
CAN_HandleTypeDef hcan;

UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */
CAN_TxHeaderTypeDef TxHeader;
CAN_RxHeaderTypeDef RxHeader;

uint8_t TxData1[8];
char TxData2[]="CAN msg";
uint8_t RxData[8];

uint32_t msg_count = 0;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_CAN_Init(void);
static void MX_USART1_UART_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

int _write(int fd, char *ptr, int len){
	if(fd==1 || fd==2){
		if(HAL_UART_Transmit(&huart1, (uint8_t *)ptr, len, HAL_MAX_DELAY)==HAL_OK) return len;
		else return -1;
	}

	return -1;
}

void HAL_CAN_TxMailbox0CompleteCallback(CAN_HandleTypeDef *hcan) {
    printf("HAL_CAN_TxMailbox0CompleteCallback\r\n");
}

void HAL_CAN_TxMailbox1CompleteCallback(CAN_HandleTypeDef *hcan) {
    printf("HAL_CAN_TxMailbox1CompleteCallback\r\n");
}

void HAL_CAN_TxMailbox2CompleteCallback(CAN_HandleTypeDef *hcan) {
    printf("HAL_CAN_TxMailbox2CompleteCallback\r\n");
}

void HAL_CAN_TxMailbox0AbortCallback(CAN_HandleTypeDef *hcan) {
    printf("HAL_CAN_TxMailbox0AbortCallback\r\n");
}

