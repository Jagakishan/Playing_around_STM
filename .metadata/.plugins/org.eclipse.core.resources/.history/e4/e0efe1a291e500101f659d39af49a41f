/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
typedef struct{
	void (*taskFunction)(void);
	uint16_t period;
	uint32_t nextExec;
	uint8_t functionEnabled;
}tasks_struct;

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define TASK_COUNT 3
#define MPU_ADDRESS 0x68<<1
#define MPU_REG_ADDRESS 0x3B
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c2;

UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */
uint32_t now;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART1_UART_Init(void);
static void MX_I2C2_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
UART_buffer buf1={0};	//buf1 is a UART_Buffer structure defined in main.h file.
mpu_raw_result_struct mpu_raw={0};
mpu_scaled_result_struct mpu_scaled={0};

void USART1_IRQHandler(){
	if(huart1.Instance->SR & USART_SR_TXE){
		if(buf1.tail!=buf1.head){
			huart1.Instance->DR=buf1.charBuffer[buf1.tail];
			buf1.tail=(buf1.tail+1)%UART_BUFFER_SIZE;
		}
		else{
			__HAL_UART_DISABLE_IT(&huart1, UART_IT_TXE);
		}
	}
}

int _write(int fd, char *ptr, int len) {
	  //This is blocking
//    HAL_StatusTypeDef hstatus;
//
//    if (fd == 1 || fd == 2) {
//      hstatus = HAL_UART_Transmit(&huart1, (uint8_t *) ptr, len, HAL_MAX_DELAY);
//      if (hstatus == HAL_OK)
//        return len;
//      else
//        return -1;
//    }
//    return -1;

	//This is non blocking

	if(fd!=1 && fd!=2) return -1;

	for(int i=0;i<len;i++){
		uint16_t next=(buf1.head+1)%UART_BUFFER_SIZE;

		if(next==buf1.tail) return -1;

		buf1.charBuffer[buf1.head]=ptr[i];
		buf1.head=next;
	}

	__HAL_UART_ENABLE_IT(&huart1, UART_IT_TXE);

	return len;
}

void mpu_init(){
	uint8_t initData = 0x00;
	HAL_StatusTypeDef ret;

	ret=HAL_I2C_Mem_Write(&hi2c2, MPU_ADDRESS, 0x6B, I2C_MEMADD_SIZE_8BIT, &initData, 1, 10);

	printf("MPU initialization status: %d\r\n", ret);
}

void mpu_read(mpu_raw_result_struct *mpu){
	uint8_t rawValues[14]={0};

	HAL_I2C_Mem_Read(&hi2c2, MPU_ADDRESS, MPU_REG_ADDRESS, I2C_MEMADD_SIZE_8BIT, rawValues, 14, 10);

	mpu->accel[0]= (rawValues[0]<<8) | rawValues[1];
	mpu->accel[1]= (rawValues[2]<<8) | rawValues[3];
	mpu->accel[2]= (rawValues[4]<<8) | rawValues[5];

	mpu->temperature= (rawValues[6]<<8) | rawValues[7];

	mpu->gyro[0]= (rawValues[8]<<8) | rawValues[9];
	mpu->gyro[1]= (rawValues[10]<<8) | rawValues[11];
	mpu->gyro[2]= (rawValues[12]<<8) | rawValues[13];
}

void mpu_scaling(mpu_raw_result_struct *raw, mpu_scaled_result_struct *scaled){

	scaled->accel[0] = raw->accel[0] / 16384.0f;
	scaled->accel[1] = raw->accel[1] / 16384.0f;
	scaled->accel[2] = raw->accel[2] / 16384.0f;

	scaled->temperature = (raw->temperature / 340.0f) + 36.53f;

	scaled->gyro[0] = raw->gyro[0] / 131.0f;
	scaled->gyro[1] = raw->gyro[1] / 131.0f;
	scaled->gyro[2] = raw->gyro[2] / 131.0f;

}

void toggle(){
	static uint8_t ledState=0;

	if(ledState)
		GPIOC->BSRR=(1<<13);
	else
		GPIOC->BSRR=(1<<(13+16));

	ledState^=1;
}

void displayCurrentState(mpu_scaled_result_struct *mpu){
	printf("Current time:%lu ms\r\n", uwTick);
	printf("ACC: %.3f %.3f %.3f, GYRO: %.2f %.2f %.2f, TEMP: %.2f\r\n",
			mpu->accel[0], mpu->accel[1], mpu->accel[2], mpu->gyro[0], mpu->gyro[1], mpu->gyro[2], mpu->temperature);
}

void call_mpu(){
	mpu_read(&mpu_raw);
	mpu_scaling(&mpu_raw, &mpu_scaled);
}

void call_displayCurrentState(){
	displayCurrentState(&mpu_scaled);
}

void call_toggle(){
	toggle();
}

tasks_struct tasks[]={
		{call_mpu, 50, 50, 1},
		{call_displayCurrentState, 500, 500, 1},
		{call_toggle, 1000, 1000, 1}
};

void cooperativeScheduler(){
	now=uwTick;

	for(int i=0;i<TASK_COUNT;i++){
		if(tasks[i].functionEnabled==1 && now>=tasks[i].nextExec){
			tasks[i].nextExec+=tasks[i].period;
			tasks[i].taskFunction();
		}
	}
}


/* USER CODE END 0 */

