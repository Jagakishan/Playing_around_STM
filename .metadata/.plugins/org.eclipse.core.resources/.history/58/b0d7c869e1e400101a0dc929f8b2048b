	  float accel[3], gyro[3], temperature;
}mpu_scaled_result_struct;

extern mpu_scaled_result_struct mpu_scaled;

typedef struct{
	uint16_t dig_T1;
	int16_t dig_T2;
	int16_t dig_T3;
	uint16_t dig_P1;
